+                            <ContextMenuItem onClick = { this._onSendPrivateMessage }>
+                                <ContextMenuIcon src = { IconMessage } />
+                                <span>{t('toolbar.accessibilityLabel.privateMessage')}</span>
+                            </ContextMenuItem>
+                        )
+                    }
+                </ContextMenuItemGroup>
+            </ContextMenu>
